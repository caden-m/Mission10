@{
}

@model BooksViewModel

<h1>@ViewBag.Calc</h1>

<h1>The New and Improved Amazon</h1>
<br />
<br />

@foreach (Books b in Model.Books)
{
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @b.Title
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>$@b.Price</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">By @b.Author</div>

    <ul>
        <li>Publisher: @b.Publisher</li>
        <li>ISBN: @b.Isbn</li>
        <li>Classification: @b.Classification</li>
        <li>Category: @b.Category</li>
        <li>Number of Pages: @b.PageCount</li>
    </ul>
</div>
<br />
}


